    "prisma": "^6.16.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.14.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "prisma": {
